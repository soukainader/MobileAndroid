<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
  <ImageView
      android:layout_width="126dp"
      android:layout_height="157dp"
      android:paddingBottom="10dp"
      android:src="@drawable/top"/>

 <com.airbnb.lottie.LottieAnimationView
     android:id="@+id/lottie"
     android:layout_width="wrap_content"
     android:layout_height="300dp"
     android:layout_marginTop="-130dp"
     android:layout_marginLeft="35dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:lottie_autoPlay="true"
     app:lottie_rawRes="@raw/login"
     app:lottie_repeatCount="30" />
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Welcome Back"
     android:textColor="#5f2656"
     android:layout_gravity="center"
     android:shadowColor="#5f2656"
     android:shadowRadius="2"
     android:shadowDx="1"
     android:shadowDy="1"
     android:textSize="30dp"
     android:textStyle="bold"/>

 <EditText
     android:id="@+id/emaill"
     android:layout_width="320dp"
     android:layout_height="50dp"
     android:layout_gravity="center"
     android:background="@drawable/sign"
     android:paddingLeft="20dp"
     android:hint="Email Address"
     android:inputType="textEmailAddress"
     android:drawableLeft="@drawable/ic_baseline_email_24"
     android:drawablePadding="5dp"
     android:layout_marginTop="20dp"/>
 <EditText
     android:id="@+id/passwordd"
     android:layout_width="320dp"
     android:layout_height="50dp"
     android:layout_gravity="center"
     android:background="@drawable/sign"
     android:paddingLeft="20dp"
     android:hint="Password"
     android:inputType="textPassword"
     android:drawableLeft="@drawable/ic_baseline_https_24"
     android:drawablePadding="5dp"
     android:layout_marginTop="10dp"/>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Forget Password ?"
     android:textColor="#5f2656"
     android:layout_gravity="end"
     android:layout_marginRight="55dp"
     android:layout_marginTop="10dp"
     android:textSize="15dp"/>
<Button
    android:id="@+id/btn"
    android:layout_width="320dp"
    android:layout_height="56dp"
    android:background="@drawable/button"
    app:backgroundTint="@null"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:text="Login"
    android:textStyle="bold"
    android:textSize="17dp"/>
 <ProgressBar
     android:id="@+id/loginProgressBar"
     style="?android:attr/progressBarStyle"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:indeterminate="true"
     android:indeterminateTint="#5f2656"
     android:indeterminateTintMode="src_atop"
     android:layout_marginTop="-55dp"/>
 <TextView
     android:id="@+id/sing"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Don't have an account? Create now"
     android:textColor="#5f2656"
     android:layout_gravity="center"
     android:layout_marginTop="15dp"
     android:textSize="15dp"/>

 <ImageView
     android:layout_width="126dp"
     android:layout_height="332dp"
     android:layout_gravity="end"
     android:paddingBottom="-30dp"
     android:src="@drawable/bottom" />

</LinearLayout>